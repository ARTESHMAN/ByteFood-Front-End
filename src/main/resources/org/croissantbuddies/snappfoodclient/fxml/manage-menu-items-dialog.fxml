<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.croissantbuddies.snappfoodclient.controller.ManageMenuItemsDialogController"
            prefHeight="400.0" prefWidth="300.0">
    <center>
        <ListView fx:id="foodListView" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Button onAction="#handleCancel" text="Cancel" />
            <Button onAction="#handleSave" defaultButton="true" text="Save Changes" />
        </HBox>
    </bottom>
</BorderPane>