<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.croissantbuddies.snappfoodclient.controller.AvailableDeliveriesController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Available Deliveries">
        <font>
            <Font name="Arial Bold" size="24.0" />
        </font>
    </Label>
    <TableView fx:id="deliveriesTable" prefHeight="500.0">
        <columns>
            <TableColumn fx:id="orderIdColumn" prefWidth="100.0" text="Order ID" />
            <TableColumn fx:id="restaurantNameColumn" prefWidth="180.0" text="Restaurant Name" />
            <TableColumn fx:id="addressColumn" prefWidth="300.0" text="Delivery Address" />
            <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Actions" />
        </columns>
    </TableView>
</VBox>