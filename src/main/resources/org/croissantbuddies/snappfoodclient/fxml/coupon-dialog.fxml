<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.croissantbuddies.snappfoodclient.controller.CouponDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Coupon Code:" GridPane.rowIndex="0" />
    <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Type:" GridPane.rowIndex="1" />
    <ComboBox fx:id="typeComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Value:" GridPane.rowIndex="2" />
    <TextField fx:id="valueField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Min Price:" GridPane.rowIndex="3" />
    <TextField fx:id="minPriceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="User Count:" GridPane.rowIndex="4" />
    <TextField fx:id="userCountField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Start Date:" GridPane.rowIndex="5" />
    <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="End Date:" GridPane.rowIndex="6" />
    <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <children>
            <Button onAction="#handleCancel" text="Cancel" />
            <Button onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save" />
        </children>
    </HBox>
</GridPane>