<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.croissantbuddies.snappfoodclient.controller.CourierDashboardController">
    <left>
        <VBox prefWidth="200.0" spacing="10.0" style="-fx-background-color: #2C3E50;">
            <children>
                <Label fx:id="courierNameLabel" alignment="CENTER" prefWidth="200.0" text="Courier Panel" textFill="WHITE">
                    <font><Font name="Arial Bold" size="20.0" /></font>
                    <VBox.margin><Insets bottom="20.0" top="20.0" /></VBox.margin>
                </Label>
                <Button onAction="#handleProfile" prefWidth="200.0" styleClass="admin-nav-button" text="My Profile" />
                <Button onAction="#handleAvailableDeliveries" prefWidth="200.0" styleClass="admin-nav-button" text="Available Deliveries" />
                <Button onAction="#handleMyDeliveries" prefWidth="200.0" styleClass="admin-nav-button" text="My Deliveries" />

                <VBox VBox.vgrow="ALWAYS" />
                <Button onAction="#handleLogout" prefWidth="200.0" styleClass="admin-nav-button" text="Logout" />
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentPane" style="-fx-background-color: #ECF0F1;" />
    </center>
   <stylesheets>
      <URL value="@../styles/styles.css" />
      <URL value="@../styles/styles.css" />
      <URL value="@../styles/styles.css" />
   </stylesheets>
</BorderPane>
