<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.croissantbuddies.snappfoodclient.controller.RestaurantManagementController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="My Restaurants">
                <font><Font name="Arial Bold" size="24.0" /></font>
            </Label>
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#handleAddNewRestaurant" styleClass="seller-nav-button" text="+ Add New Restaurant" />
        </HBox>
        <TableView fx:id="restaurantsTable" prefHeight="450.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="addressColumn" prefWidth="250.0" text="Address" />
                <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone" />
                <TableColumn fx:id="manageColumn" prefWidth="120.0" text="Actions" />
            </columns>
        </TableView>
    </children>
</VBox>
