<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.croissantbuddies.snappfoodclient.controller.SellerOrderManagementController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Order Management">
        <font>
            <Font name="Arial Bold" size="24.0" />
        </font>
    </Label>
    <TableView fx:id="ordersTable" prefHeight="500.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="Order ID" />
            <TableColumn fx:id="restaurantNameColumn" prefWidth="150.0" text="Restaurant Name" />
            <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Total Price" />
            <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
            <TableColumn fx:id="createdAtColumn" prefWidth="150.0" text="Order Time" />
            <TableColumn fx:id="actionsColumn" prefWidth="200.0" text="Actions" />
        </columns>
    </TableView>

</VBox>