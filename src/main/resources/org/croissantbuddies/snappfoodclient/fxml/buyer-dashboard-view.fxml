<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.croissantbuddies.snappfoodclient.controller.BuyerDashboardController">
    <left>
        <VBox prefWidth="180.0" spacing="10.0" style="-fx-background-color: #1A5276;">
            <children>
                <Label fx:id="buyerNameLabel" alignment="CENTER" prefWidth="180.0" text="Buyer Panel" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Arial Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Button onAction="#handleProfile" prefWidth="180.0" styleClass="admin-nav-button" text="My Profile" />
                <Button onAction="#handleShowRestaurants" prefWidth="180.0" styleClass="admin-nav-button" text="Restaurants" />
                <Button onAction="#handleFoodSearch" prefWidth="180.0" styleClass="admin-nav-button" text="Search Food" />
                <Button onAction="#handleMyCart" prefWidth="180.0" styleClass="admin-nav-button" text="My Cart" />
                <Button onAction="#handleMyOrders" prefWidth="180.0" styleClass="admin-nav-button" text="My Orders" />
                <Button onAction="#handleFavorites" prefWidth="180.0" styleClass="admin-nav-button" text="Favorites" />


                <Pane VBox.vgrow="ALWAYS" />

                <Button onAction="#handleLogout" prefWidth="180.0" styleClass="admin-nav-button" text="Logout" />
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentPane" style="-fx-background-color: #FDFEFE;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>