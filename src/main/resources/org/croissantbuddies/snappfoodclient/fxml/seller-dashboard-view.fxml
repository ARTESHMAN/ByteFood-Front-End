<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.croissantbuddies.snappfoodclient.controller.SellerDashboardController">
    <left>
        <VBox prefWidth="180.0" spacing="10.0" style="-fx-background-color: #D35400;">
            <children>
                <Label fx:id="sellerNameLabel" alignment="CENTER" prefWidth="180.0" text="Seller Panel" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Arial Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </Label>

                <Button onAction="#handleProfile" prefWidth="180.0" styleClass="seller-nav-button" text="My Profile" />
                <Button onAction="#handleMyRestaurants" prefWidth="180.0" styleClass="seller-nav-button" text="My Restaurants" />
                <Button onAction="#handleManageOrders" prefWidth="180.0" styleClass="seller-nav-button" text="Manage Orders" />

                <Pane VBox.vgrow="ALWAYS" />

                <Button onAction="#handleLogout" prefWidth="180.0" styleClass="seller-nav-button" text="Logout" />
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentPane" style="-fx-background-color: #FDFEFE;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
